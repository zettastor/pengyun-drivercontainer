          <set>
              <ref bean="DataNodeInstance1" />
              <ref bean="DataNodeInstance2" />
              <ref bean="DataNodeInstance3" />
              <ref bean="InfoCenterInstance" />
              <ref bean="CoordinatorInstance" />
          </set>
      </property>
  </bean> -->

</beans>
